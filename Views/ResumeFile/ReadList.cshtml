@model IEnumerable<SampleCore.Core.Model.Resume>

@{
    Layout = null;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script>
    function partial(id) {
        $("#myModal").css('display', 'block');
        $("#values").load("/ResumeFile/Excel?ResumeId=" + id);
        $("#myModal").modal("show");
    }
</script>
<h3 align="center">
    <i class="fa fa-info-circle" style="font-size:24px"></i>
    Resume Information  List
</h3>

<style>
    .design {
        border-radius: 25px;
        background-color: lightpink;
        float: right;
    }

    a {
        text-decoration: none;
    }

    body {
        background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSCpqdqhBSswB4o6NmVfud_eAHdgAFdaegG9g&usqp=CAU');
        background-size: cover;
    }

    .table-light {
        width: 90%;
        margin-left: 5%;
    }
</style>

<button class="design">@Html.ActionLink("Create New","FileUpload")</button>
<br />
<br />
<table class="table table-bordered table-striped table-light table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var Resume_Detail in Model)
        {
            //  @if(Student_detail != null)
            <tr>
                <td>
                    @Html.DisplayFor(model => Resume_Detail.Name)
                </td>
                <td>
                    @Html.DisplayFor(model =>Resume_Detail.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => Resume_Detail.Age)
                </td>
                <td>
                    @Html.DisplayFor(model => Resume_Detail.Gender)
                </td>
                <td>
                    @Html.DisplayFor(model => Resume_Detail.Location)
                </td>
                <td>

                    @Html.ActionLink("", "Download",new{@filename=Resume_Detail.Resumes},
                new{@class="fa fa-download",title="Download ResumeDetails",style="color:darkblue;font-size:24px;text-decoration:none"})


                    <button style="border:none; background-color: Transparent" title="partial view" type="button" data-bs-toggle="modal" data-bs-target="#myModal" onclick="partial('@Resume_Detail.ResumeId')">
                        <i class="fa fa-eye" style="color:darkslategray;font-size:24px;"></i>
                    </button>
                    <div class="modal" id="myModal">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body" id="values">
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                </div>

                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </thead>
</table>








